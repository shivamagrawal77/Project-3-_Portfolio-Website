}
.socialmedia{
    margin-left: 20px;
}
.socialmedia a{
    text-decoration: none;
    display: inline-block;

}
.socialmedia a:hover{
    cursor: grabbing;
}
.contact-right{
    flex-basis: 60%;
    justify-content: space-between;
    flex-wrap: wrap;

}
