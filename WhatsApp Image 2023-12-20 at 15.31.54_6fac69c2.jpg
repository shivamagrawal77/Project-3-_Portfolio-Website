}
.col2 ul li span{
    color: rgb(20, 76, 198);
}
.social-icon a{
    size: 2em;
}
.contact h1{
    font-size: 60px;
    font-weight: 600;
    margin-left: 20px;
}
.row-contact{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    height: max-content;
    padding: 20px;
}
.contact-left{
    flex-basis: 35%;
}
.contact-left p{
    font-size: 20px;
