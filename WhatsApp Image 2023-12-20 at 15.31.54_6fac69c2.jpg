style . css 
*{
    font-family: Georgia, 'Times New Roman', Times, serif;
    box-sizing: border-box;
}
.header{
    margin: 0;
    padding: 0;
    width: 100%;
    height: 50vh;
    background: url(/Images/background_image.jpg);
    background-size: contain; 
    background-position: center;
    background-repeat: no-repeat;
   
  
}
.main{
    display: flex;
    align-items: center;
    justify-content:space-between;
    height: 100vh;
}
/* .devPic{
    display: inline;
    flex-basis: 60%;

} */
.devPic img{
    border-radius: 50%;
    
}
.container{
    display: flex;
    
    align-items: center;
    justify-content: space-around;
    background-color: rgb(112, 174, 176);
}
/*nav{
    background-color: rgb(138, 210, 155);
    border: solid 2PX black;
    border-radius: 5PX;
}*/
.container nav ul li {

    list-style: none;
    display: inline-block;
  
    margin: 5px 10px;
}
.container nav ul li a{
    color: black;
    text-decoration: none;
    font-size: 18px;
}
nav ul li a:hover{
    color: rgb(24, 194, 232);

}
.headerText{

    height: 100vh;
    display: flex;
    margin-left: 30%;
    flex-direction: column;
    text-align: center;
    justify-content: center;
}

.headerText h1{
    color: rgb(120, 31, 38);
}
.bar{
    overflow: hidden;
    background-color:rgb(104, 119, 136);
    border: 15px;
    margin: 10px;
}

.bar a{
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
    border: 15px;
    margin: 10px;
}
.bar a:hover {
    background-color: #ddd;
    color: black;
  }
  
  .bar a.active {
    background-color: #04AA6D;
    color: white;
  }

/* -----------------about me---------------*/
.aboutMe{
    padding: 80px 0;
    background-color: cornflowerblue;

}
.row{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    height: max-content;
    padding: 20px;

}
.co1{
    flex-basis: 35%;
}
.col1 img{
    width: 50%;
    border-radius: 15px;
    height: fit-content;
    margin: 0px 30px;
}
.col2{
    flex-basis: 60%;

}
.col2 h1{
    font-size: 60px;
    font-weight: 600;
}
p{
    text-align: justify;
}

.col2 ul li{
    list-style:square;
